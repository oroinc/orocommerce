{% set validation = [] %}
{% if record.getValue('required') %}
    {% set validation = validation|merge(['orob2b.attribute.attribute_type_constraint.required'|trans]) %}
{% endif %}
{% if record.getValue('unique') %}
    {% set validation = validation|merge(['orob2b.attribute.attribute_type_constraint.unique'|trans]) %}
{% endif %}
{% if record.getValue('validation') %}
    {% set validation = validation|merge([('orob2b.attribute.attribute_type_constraint.' ~ record.getValue('validation'))|trans]) %}
{% endif %}
{{ validation|join(', ') }}
