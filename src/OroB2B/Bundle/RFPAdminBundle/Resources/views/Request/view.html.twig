{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% oro_title_set({params : {"%title%": entity.__toString()}}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_rfp_admin_request_index'),
        'indexLabel': 'orob2b.rfpadmin.request.entity_plural_label'|trans,
        'entityTitle': entity.__toString()|default('N/A'|trans)
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('orob2b_rfp_admin_request_update', { 'id': entity.id }),
            'entity_label': 'orob2b.rfpadmin.request.entity_label'|trans
        }) }}
    {% endif %}
    {{ UI.clientButton({
        'dataUrl': path('orob2b_rfp_admin_request_change_status', {id: entity.id}),
        'aCss': 'no-hash',
        'iCss': 'icon-edit',
        'dataId': entity.id,
        'label': 'orob2b.rfpadmin.btn.change_status'|trans,
        'widget' : {
            'type' : 'dialog',
            'multiple' : false,
            'refresh-widget-alias' : 'activity-list-widget',
            'reload-widget-alias' : 'request-info-widget',
            'options' : {
                'alias': 'request-change-status-dialog',
                'dialogOptions' : {
                    'title' : 'orob2b.rfpadmin.widget.change_status_title'|trans,
                    'allowMaximize': false,
                    'allowMinimize': false,
                    'dblclick': 'maximize',
                    'maximizedHeightDecreaseBy': 'minimize-bar',
                    'width': 550,
                    'resizable': true
                }
            }
        },
        'messages': {
            'saved': 'orob2b.rfpadmin.message.request_status_changed'|trans
        }
    }) }}
{% endblock navButtons %}

{% block content_data %}
    {% set requestInfo %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('orob2b_rfp_admin_request_info', {id: entity.id}),
            'alias': 'request-info-widget'
        }) }}
    {% endset %}

    {% set requestContent %}
        <div class="row-fluid form-horizontal">
            <div class="responsive-block">
                {{ entity.body|nl2br }}
            </div>
        </div>
    {% endset %}

    {% set requestProducts %}
        <div class="rfpadmin-requestproducts-info control-group">
            <table>
                {% for requestProduct in entity.requestProducts %}
                    <tr>
                        <td class="rfpadmin-requestproduct-product">
                            <label class="control-label">{{ 'orob2b.product.entity_label'|trans }}</label>
                        </td>
                        <td class="rfpadmin-requestproduct-info">
                            {% if requestProduct.product %}
                                <a href="{{ path('orob2b_product_view', { id: requestProduct.product.id }) }}">{{ requestProduct.product|raw }}</a>
                            {% else %}
                                {{ requestProduct.productSku|raw }}
                            {% endif %}
                        </td>
                        <td class="rfpadmin-requestproductitems-info">
                            {% for requestProductItem in requestProduct.requestProductItems %}
                                <div class="rfpadmin-requestproducttitem-info">
                                    {{ requestProductItem|orob2b_format_rfpadmin_request_product_item }}
                                </div>
                            {% endfor %}
                      </td>
                    </tr>
                    <tr class="rfpadmin-requestproduct-comment">
                        <td>&nbsp;</td>
                        <td class="rfpadmin-requestproduct-info control-group">
                            <label class="control-label">{{ 'orob2b.rfpadmin.requestproduct.comment.label'|trans }}</label>
                        </td>
                        <td class="rfpadmin-requestproductitems-info">
                            <label>{{ requestProduct.comment|nl2br }}</label>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'orob2b.rfpadmin.sections.general'|trans,
            'class': 'active',
            'subblocks': [{'data' : [requestInfo]}]
        },
        {
            'title': 'orob2b.rfpadmin.sections.request_products'|trans,
            'subblocks': [{'data' : [requestProducts]}]
        },
        {
            'title': 'orob2b.rfpadmin.sections.body'|trans,
            'subblocks': [{'data' : [requestContent]}]
        }
    ] %}

    {% set id = 'request-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
