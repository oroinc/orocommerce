{% set pageComponent = pageComponent|default('orob2bpricing/js/app/components/subtotals-component') %}
<div data-page-component-module="{{ pageComponent }}" data-page-component-options="{{ options|json_encode }}">
    <div class="subtotals-container"></div>
    <script type="text/html" class="subtotals-template">
        {% block subtotals_template %}
            <% if ('subtotal' in subtotals) { %>
                <div class="control-group">
                    <label class="control-label"><%= subtotals.subtotal.label %></label>
                    <div class="controls">
                        <label class="control-label"><%= subtotals.subtotal.formattedAmount %></label>
                    </div>
                </div>
            <% } %>
        {% endblock %}
    </script>
</div>
