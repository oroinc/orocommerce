{% block orob2b_sale_quote_product_collection_row %}
    <div class="sale-quoteproduct-collection">
        {{ form_widget(form) }}
    </div>
{% endblock %}

{% block orob2b_sale_quote_product_widget %}
    {% set attr = attr|merge({'class': (attr.class is defined ? attr.class : '') ~ ' sale-quoteproduct-widget control-group'}) %}
    
    {% set units = [] %}
    {% if form.vars.value %}
        {% set product = form.vars.value.product %}

        {% for code in product.availableUnitCodes %}
            {% set units = units|merge({ (code) : ('orob2b.product_unit.' ~ code ~ '.label.full')|trans}) %}
        {% endfor %}
    {% endif %}
    
    <div {{ block('widget_container_attributes') }} data-page-component-options="{{ {'units': units ? {(product.id) : units} : {} }|json_encode }}"
        data-page-component-module="orob2bsale/js/app/components/sale-quoteproductitem-unit-selection-limitations-component">
        {{ form_label(form.product, '', { label_attr: label_attr|merge({ class: 'control-label' })}) }}
        <div class="sale-quoteproduct-product-select controls{% if errors|length > 0 %} validation-error{% endif %}">
            {{ form_widget(form.product) }}
            {{ form_errors(form.product) }}
        </div>
        <div class="sale-quoteproductitem-collection">
            {{ form_widget(form.quoteProductItems) }}
        </div>
    </div>
{% endblock %}

{% block orob2b_sale_quote_product_item_widget %}
    <table class="sale-quoteproductitem-widget">
        <tr>
            <td>Quote Line Item:</td>
            <td>
                {{ form_widget(form.quantity) }}
                {{ form_errors(form.quantity) }}
            </td>
            <td>
                {{ form_widget(form.productUnit, {attr: attr|merge({class: 'sale-quoteproductitem-productunit-select'})}) }}
                {{ form_errors(form.productUnit) }}
            </td>
            <td>
                {{ form_widget(form.price.value) }}
                {{ form_errors(form.price.value) }}
            </td>
            <td>
                {{ form_widget(form.price.currency) }}
                {{ form_errors(form.price.currency) }}
            </td>
        </tr>
    </table>

    <table class="sale-quoteproductitem-widget">
        <tr>
            <td>Requested:</td>
            <td>
                {{ form_widget(form.requestedQuantity) }}
                {{ form_errors(form.requestedQuantity) }}
            </td>
            <td>
                {{ form_widget(form.requestedProductUnit, {attr: attr|merge({class: 'sale-quoteproductitem-productunit-select'})}) }}
                {{ form_errors(form.requestedProductUnit) }}
            </td>
            <td>
                {{ form_widget(form.requestedPrice.value) }}
                {{ form_errors(form.requestedPrice.value) }}
            </td>
            <td>
                {{ form_widget(form.requestedPrice.currency) }}
                {{ form_errors(form.requestedPrice.currency) }}
            </td>
        </tr>
    </table>

    <table class="sale-quoteproductitem-widget-last-line">
        <tr>
            <td>
                {{ form_row(form.status) }}
                {{ form_errors(form.status) }}
            </td>
            <td>
                {{ form_row(form.comment) }}
                {{ form_errors(form.comment) }}
            </td>
        </tr>
        <tr>
            <td>
                <a class="btn add-list-item2" href="javascript: void(0);">Suggest a Replacement</a>
            </td>
            <td>
                <a class="btn add-list-item2" href="javascript: void(0);">Not Available</a>
            </td>
        </tr>
    </table>
{% endblock %}
