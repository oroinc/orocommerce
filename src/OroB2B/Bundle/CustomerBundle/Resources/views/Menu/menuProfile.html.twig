{% if app.user %}
    <li class="dropdown">
        <a href="javascript: void(0);" class="dropdown-toggle" data-toggle="dropdown">
            {% if isMobileVersion() %}
                <i class="icon-user"></i>
            {% else %}
                Account User: {{ app.user|oro_format_name|escape }}
                <i class="icon-sort-down"></i>
            {% endif %}
        </a>
        {{ oro_menu_render('account_usermenu') }}
    </li>
{% else %}
    <li><a href="{{ path('orob2b_customer_account_user_security_login') }}">{{ 'Login'|trans }}</a></li>
{% endif %}
