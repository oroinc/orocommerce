{% form_theme form with ['OroB2BCustomerBundle:Include:fields.html.twig', 'OroFormBundle:Form:fields.html.twig', _self] %}
<div class="widget-content">
    {% if saved %}
        <script type="text/javascript">
        require(['oroui/js/widget-manager'],
        function(widgetManager) {
            widgetManager.getWidgetInstance({{ app.request.get('_wid')|json_encode|raw }}, function(widget) {
                widget.trigger('formSave', {{ form.vars.value.id|json_encode|raw }});
            });
        });
        </script>
    {% else %}
        {% if not form.vars.valid and form_errors(form) %}
        <div class="alert alert-error" style="margin:0">
            <div class="message">
                {{ form_errors(form) }}
            </div>
        </div>
        {% endif %}

        <form id="{{ form.vars.name }}"
              action="{{ form.vars.value and form.vars.value.id > 0
                  ? path('orob2b_customer_address_update', { id: form.vars.value.id, customerId: customer.id })
                  : path('orob2b_customer_address_create', { customerId: customer.id })
              }}"
              method="post" class="form-register form-dialog">
            <fieldset class="form-horizontal">
                {{ form_widget(form) }}
                <div class="widget-actions form-actions" style="display: none;">
                    <button class="btn" type="reset">{{ 'Cancel'|trans }}</button>
                    <button class="btn btn-primary" type="submit">{{ 'Save'|trans }}</button>
                </div>
            </fieldset>
        </form>
        {{ oro_form_js_validation(form) }}
        {% import 'OroB2BCustomerBundle:Include:macros.html.twig' as macroses %}
        {% set id = 'orob2b_customer_typed_address' %}
        {{ macroses.oro_collection_disable_default_types_js(_context) }}
    {% endif %}
</div>
