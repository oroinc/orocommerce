@name = account_user_welcome_email
@entityName = OroB2B\Bundle\CustomerBundle\Entity\AccountUser
@subject = Welcome: {{ entity.username }}
@isSystem = 1
@isEditable = 1

<h1>Welcome {{ entity.username }}</h1>
<div>
    {% if password is not empty%}
        <p>Your password is <b>{{ password }}</b></p>
    {% endif %}
    <p>Please follow this link to login: <a href="{{ oro_config_value('oro_ui.application_url')|trim('/') ~ path('orob2b_customer_account_user_security_login') }}">Profile Login</a></p>
</div>
