{% set customerPaymentTermLabel = record.getValue('payment_term_label') %}
{% set customerGroupPaymentTermLabel = record.getValue('payment_term_group_label') %}

{% if customerPaymentTermLabel %}
    {{ customerPaymentTermLabel }}
{% elseif customerGroupPaymentTermLabel %}
    {{ 'orob2b.payment.customer.payment_term_defined_in_group'|trans({'%payment_term%': customerGroupPaymentTermLabel }) }}
{% else %}
    {{ 'orob2b.payment.customer.payment_term_non_defined_in_group'|trans }}
{% endif %}