{% import '@OroUI/macros.html.twig' as UI %}
{% import '@OroEntityConfig/macros.html.twig' as entityConfig %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('oro.shoppinglist.id.label'|trans, shopping_list.id) }}
            {% if shopping_list.customer %}
                {{ UI.renderHtmlProperty('oro.shoppinglist.customer.label'|trans, UI.entityViewLink(shopping_list.customer, shopping_list.customer|oro_format_name, 'oro_customer_customer_view')) }}
            {% endif %}
            {% if shopping_list.customerUser %}
                {{ UI.renderHtmlProperty('oro.shoppinglist.customer_user.label'|trans, UI.entityViewLink(shopping_list.customerUser, shopping_list.customerUser|oro_format_name, 'oro_customer_customer_user_view')) }}
            {% endif %}
            {{ UI.renderProperty('oro.shoppinglist.label.label'|trans, shopping_list.label) }}
            {{ UI.renderProperty('oro.shoppinglist.notes.label'|trans, shopping_list.notes) }}
        </div>
        <div class="responsive-block">
            {{ entityConfig.renderDynamicFields(shopping_list) }}
        </div>
    </div>
</div>
