                frontend_type: 'title',
                value: shoppingList.label,
                fieldName: 'label',
                insertEditorMethod: 'after',
                eventChannelId: 'shopping-list-title',
                metadata: {
                    broadcast_parameters: {
                        id: shoppingList.id
