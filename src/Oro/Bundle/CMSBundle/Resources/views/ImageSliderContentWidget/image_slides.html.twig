{% import '@OroUI/macros.html.twig' as UI %}
{% import '@OroDataGrid/macros.html.twig' as dataGrid %}

<div class="image-collection view">
    <table class="grid grid-main-container table table-bordered">
        <thead>
        <tr>
            <th>{{ 'oro.cms.imageslide.slide_order.label'|trans }}</th>
            <th>{{ 'oro.cms.imageslide.url.label'|trans }}</th>
            <th>{{ 'oro.cms.imageslide.alt_image_text.label'|trans }}</th>
            <th>{{ 'oro.cms.imageslide.text_alignment.label'|trans }}</th>
            <th>{{ 'oro.cms.imageslide.display_in_same_window.label'|trans }}</th>
            <th>{{ 'oro.cms.imageslide.loading.label'|trans }}</th>
            <th>{{ 'oro.cms.imageslide.fetch_priority.label'|trans }}</th>
            <th>{{ 'oro.cms.imageslide.form.table.row.extra_large.label'|trans }}</th>
            <th>{{ 'oro.cms.imageslide.form.table.row.large.label'|trans }}</th>
            <th>{{ 'oro.cms.imageslide.form.table.row.medium.label'|trans }}</th>
            <th>{{ 'oro.cms.imageslide.form.table.row.small.label'|trans }}</th>
        </tr>
        </thead>

        <tbody>
            {% for imageSlide in imageSlides %}
            <tr>
                <td>
                    {{ imageSlide.slideOrder }}
                </td>
                <td>
                    {{ imageSlide.url }}
                </td>
                <td>
                    {{ imageSlide.altImageText }}
                </td>
                <td>
                    {{ ('oro.cms.imageslide.text_alignment.value.' ~ imageSlide.textAlignment)|trans }}
                </td>
                <td>
                    {% if imageSlide.displayInSameWindow %}
                        {{ 'oro.form.link_target.value.same_window'|trans }}
                    {% else %}
                        {{ 'oro.form.link_target.value.new_window'|trans }}
                    {% endif %}
                </td>
                <td>
                    {{ ('oro.cms.imageslide.loading.value.' ~ imageSlide.loading)|trans }}
                </td>
                <td>
                    {{ ('oro.cms.imageslide.fetch_priority.value.' ~ imageSlide.fetchPriority)|trans }}
                </td>
                <td>
                    {% if imageSlide.extraLargeImage %}
                        <div>
                            {{ oro_file_view(imageSlide.extraLargeImage, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}
                        </div>
                    {% endif %}
                    {% if imageSlide.extraLargeImage2x %}
                        <div>
                            {{ oro_file_view(imageSlide.extraLargeImage2x, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}
                        </div>
                    {% endif %}
                    {% if imageSlide.extraLargeImage3x %}
                        <div>
                            {{ oro_file_view(imageSlide.extraLargeImage3x, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}
                        </div>
                    {% endif %}
                </td>
                <td>
                    {% if imageSlide.largeImage %}
                        <div>
                            {{ oro_file_view(imageSlide.largeImage, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}

                        </div>
                    {% endif %}
                    {% if imageSlide.largeImage2x %}
                        <div>
                            {{ oro_file_view(imageSlide.largeImage2x, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}

                        </div>
                    {% endif %}
                    {% if imageSlide.largeImage3x %}
                        <div>
                            {{ oro_file_view(imageSlide.largeImage3x, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}
                        </div>
                    {% endif %}
                </td>
                <td>
                    {% if imageSlide.mediumImage %}
                        <div>
                            {{ oro_file_view(imageSlide.mediumImage, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}
                        </div>
                    {% endif %}
                    {% if imageSlide.mediumImage2x %}
                        <div>
                            {{ oro_file_view(imageSlide.mediumImage2x, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}
                        </div>
                    {% endif %}
                    {% if imageSlide.mediumImage3x %}
                        <div>
                            {{ oro_file_view(imageSlide.mediumImage3x, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}
                        </div>
                    {% endif %}
                </td>
                <td>
                    {% if imageSlide.smallImage %}
                        <div>
                            {{ oro_file_view(imageSlide.smallImage, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}
                        </div>
                    {% endif %}
                    {% if imageSlide.smallImage2x %}
                        <div>
                            {{ oro_file_view(imageSlide.smallImage2x, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}
                        </div>
                    {% endif %}
                    {% if imageSlide.mediumImage3x %}
                        <div>
                            {{ oro_file_view(imageSlide.smallImage3x, {'galleryId': 'image-slide-' ~ imageSlide.id}) }}
                        </div>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
