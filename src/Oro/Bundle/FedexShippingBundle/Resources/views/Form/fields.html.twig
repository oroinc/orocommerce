{% block oro_fedex_settings_widget %}
    {{ form_widget(form) }}

    <div class="control-group control-group-button">
        <div class="controls">
            <button type="button"
                    class="btn btn-primary"
                    data-page-component-module="orointegration/js/app/components/integration-connection-checker-component"
                    data-page-component-options="{{ {
                        'formSelector': '[name="oro_integration_channel_form"]',
                        'backendUrl': path('oro_fedex_validate_connection', {'channelId': form.vars.value.id|default(0) })
                    }|json_encode }}"
            >
                {{ 'oro.fedex.connection_validation.button.text'|trans }}
            </button>
        </div>
    </div>
{% endblock %}

{% block oro_fedex_shipping_method_options_widget %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}
    {{ UI.tooltip('oro.fedex.shipping_method_options.surcharge.tooltip', {}, 'right') }}
    {{ form_widget(form) }}
{% endblock %}
