{% block _quick_add_copy_paste_form_start_widget %}
    {% set attr = {
        'data-page-component-view': 'oroproduct/js/app/views/quick-add-copy-paste-form-view',
    }|merge(attr) %}
    {{ block('form_start_widget') }}
{% endblock %}

{% block _quick_add_copy_paste_form_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ ' quick-order-copy-paste'
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block _quick_add_copy_paste_title_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ ' quick-order-copy-paste__title'
    }) %}
    <h2 {{ block('block_attributes') }}>
        <span class="fa-paste" aria-hidden="true"></span>
        {{ block_widget(block) }}
    </h2>
{% endblock %}

{% block _quick_add_copy_paste_description_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ ' quick-order-copy-paste__description label label--full',
        for: 'oro_product_quick_add_copy_paste_copyPaste'
    }) %}
    <label {{ block('block_attributes') }}>{{ block_widget(block) }}</label>
{% endblock %}

{% block _quick_add_copy_paste_form_buttons_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ ' quick-order-copy-paste__buttons'
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}
