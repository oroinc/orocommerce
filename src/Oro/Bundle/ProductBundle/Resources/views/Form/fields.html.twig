{% endmacro %}

{% block oro_product_kit_item_widget %}
    {% import '@OroUI/macros.html.twig' as UI %}
    {% import '@OroEntityConfig/macros.html.twig' as entityConfig %}
    {% import _self as fields %}

    {% set collapseClass = 'collapse-' ~ id %}
    {% set collapseFormId = 'collapse-form-' ~ id %}
    {% set collapseViewId = 'collapse-view-' ~ id %}
    {% set isShow = value.id is null or form.vars.name == '0' or not form.vars.valid %}
    {% set viewOptions = {
        fieldsNamespace: form.vars.full_name,
        kitItemId: value.id,
        fields: fieldsMap,
        submitted: form.vars.submitted
    } %}

    {% if form.children.sortOrder is defined %}
        {% set viewOptions = viewOptions|merge({
            sortOrderFieldSelector: '[name$="[' ~ form.children.sortOrder.vars.name ~ ']"]'
        }) %}
    {% endif %}

    {% apply spaceless %}
    <div class="product-kit-item content-variant-item
        {{ form.vars.valid ? '' : 'has-error'}}
        {{ isShow ? 'show' : '' }}" {{ UI.renderPageComponentAttributes({
        view: 'oroproduct/js/app/views/product-kit/product-kit-view',
        options: viewOptions
    }) }} data-role="content-variant-item">
        <div class="product-kit-item__title content-variant-item-title" data-name="sortable-handle">
            <button type="button" class="btn-toggle-variant btn btn-icon btn-square-light {{ isShow ? '' : 'collapsed' }}"
                data-toggle="collapse"
                data-related="{{ full_name }}"
                data-target="#{{ collapseFormId }}"
                aria-expanded="{{ value.id == '1' ? 'true' : 'false' }}"
                aria-controls="{{ collapseFormId }}"
            >
                <span class="fa-icon oro-collapse-icon" aria-hidden="true"></span>
            </button>
            <div class="product-kit-item__label"
                 data-toggle="collapse"
                 data-target="#{{ collapseFormId }}"
                 data-model="labels"
            >{{ value.labels|localized_value|escape }}</div>
        </div>

        <div class="content-variant-item-content__body">
            <div id="{{ collapseFormId }}"
                 class="{{ collapseClass }} product-kit-item__form collapse {{ isShow ? 'show' : '' }}"
                 data-role="product-kit-form"
                 data-type="primary"
                 data-validation-force
                >
                {{ form_widget(form) }}
            </div>
            <div id="{{ collapseViewId }}" class="{{ collapseClass }} product-kit-item__preview collapse {{ isShow ? '' : 'show' }}" data-role="product-kit-view" data-type="secondary">
                <div class="product-kit-item__properties">
                    <div class="product-kit-item__horizontal">
                        {%- import '@OroUI/macros.html.twig' as UI %}
                        {{ UI.renderHtmlProperty(
                            'oro.product.productkititem.optional.label'|trans,
                            fields.bind_model_value(
                                value.optional ? 'oro.product.productkititem.optional.choices.yes'|trans : 'oro.product.productkititem.optional.choices.no'|trans,
                                'optional'
                            )
                        ) }}

                        {{ UI.renderHtmlProperty(
                            'oro.product.productkititem.minimum_quantity.label'|trans,
                            fields.bind_model_value(
                                value.minimumQuantity,
                                'minimumQuantity'
                            )
                        ) }}

                        {{ UI.renderHtmlProperty(
                            'oro.product.productkititem.maximum_quantity.label'|trans,
                            fields.bind_model_value(
                                value.maximumQuantity,
                                'maximumQuantity'
                            )
                        ) }}

                        {{ UI.renderHtmlProperty(
                            'oro.product.productkititem.product_unit.label'|trans,
                            fields.bind_model_value(
                                value.productUnit ? oro_format_product_unit_precision_label(value.productUnit.code, value|oro_product_kit_item_unit_precision),
                                'productUnit'
                            )
                        ) }}

                        {{ fields.renderBindDynamicFields(value) }}

                        <div class="attribute-wide">
                            {%- set skus = selectedProductsSkus|join(', ') -%}
                            {{ UI.renderHtmlProperty(
                                'oro.product.productkititem.kit_item_products.label'|trans,
                                fields.bind_model_value(
                                    skus,
                                    'kitItemProducts'
                                ),
                                null,
                                null,
                                {
                                    rootClass: 'wide',
                                    descriptionClass: 'attribute-item__description--ellipsis'
                                }
                            ) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endapply %}
{% endblock %}

