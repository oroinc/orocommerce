{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%email%": entity.email }}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_account_account_user_index'),
        'indexLabel': 'oro.account.accountuser.entity_plural_label'|trans,
        'entityTitle': entity.username|default('N/A'|trans)
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block breadcrumbs %}
    {{ parent() }}
    <div class="pull-left">
        {% if entity.enabled %}
            <div class="badge badge-enabled status-enabled"><i class="icon-status-enabled icon-circle"></i>{{ 'oro.account.accountuser.profile.enabled.label'|trans }}</div>
        {% else %}
            <div class="badge badge-disabled status-disabled"><i class="icon-status-disabled icon-circle"></i>{{ 'oro.account.accountuser.profile.disabled.label'|trans }}</div>
        {% endif %}
        {% if entity.confirmed %}
            <div class="badge badge-enabled status-enabled"><i class="icon-status-enabled icon-circle"></i>{{ 'oro.account.accountuser.profile.confirmed.label'|trans }}</div>
        {% else %}
            <div class="badge badge-disabled status-disabled"><i class="icon-status-disabled icon-circle"></i>{{ 'oro.account.accountuser.profile.unconfirmed.label'|trans }}</div>
        {% endif %}
    </div>
{% endblock breadcrumbs %}

{% block stats %}
    <li>{{ 'oro.ui.created_at'|trans }}: {{ entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A' }}</li>
    <li>{{ 'oro.ui.updated_at'|trans }}: {{ entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'N/A' }}</li>
    <li>{{ 'oro.account.accountuser.last_login.label'|trans }}: {{ entity.lastLogin ? entity.lastLogin|oro_format_datetime : 'N/A' }}</li>
    <li>{{ 'oro.account.accountuser.login_count.label'|trans }}: {{ entity.loginCount|default(0) }}</li>
{% endblock stats %}

{% block content_data %}
    {% set accountUserInformationWidget %}
    {{ oro_widget_render({
        'widgetType': 'block',
        'url': path('orob2b_account_account_user_info', {id: entity.id})
    }) }}
    {% endset %}

    {% set addressBookWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'contentClasses': [],
            'url': path('orob2b_account_account_user_address_book', {id: entity.id}),
            'title': 'oro.account.accountuser.address_book.label'|trans
        }) }}
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'oro.account.sections.general'|trans,
            'class': 'active',
            'subblocks': [
                {'data' : [accountUserInformationWidget]},
                {'data' : [addressBookWidget]},
            ]
        }
    ] %}

    {% set id = 'account-user-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
