{% extends 'OroUIBundle:actions:index.html.twig' %}

{% import 'OroUIBundle::macros.html.twig' as UI %}

{% set gridName = 'tax-taxe-rules-grid' %}
{% set pageTitle = 'oro.tax.taxrule.entity_plural_label'|trans %}

{% block navButtons %}
    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
        entity_class: entity_class,
        exportProcessor: 'oro_tax_tax_rule',
        importProcessor: 'oro_tax_tax_rule',
        importTitle: 'oro.importexport.import.entity'|trans({'%entityName%': 'oro.tax.taxrule.entity_plural_label'|trans}),
        dataGridName: gridName
    } %}
    {% if resource_granted('oro_tax_rule_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('oro_tax_rule_create'),
                'entity_label': 'oro.tax.taxrule.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
