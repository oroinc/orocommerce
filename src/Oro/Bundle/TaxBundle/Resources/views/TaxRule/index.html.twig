{% extends 'OroUIBundle:actions:index.html.twig' %}

{% import 'OroUIBundle::macros.html.twig' as UI %}

{% set gridName = 'tax-taxe-rules-grid' %}
{% set pageTitle = 'oro.tax.taxrule.entity_plural_label'|trans %}

{% block navButtons %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}

    {% include 'OroImportExportBundle:ImportExport:buttons_from_configuration.html.twig' with {
        'alias': 'oro_tax_rule'
    } %}

    {% if is_granted('oro_tax_rule_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('oro_tax_rule_create'),
                'entity_label': 'oro.tax.taxrule.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
