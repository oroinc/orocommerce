{% import 'OroUIBundle::macros.html.twig' as UI %}
{% if resource_granted('oro_product_inventory_update') and resource_granted('EDIT', entity) %}
    {% set dialogTitle %}
        {{ entity.sku|default('N/A'|trans) }} - {{ entity.defaultName.string|default('N/A'|trans) }} - {{ 'oro.inventory.widgets.inventory_management'|trans }}
    {% endset %}
    {{ UI.clientButton({
        'dataUrl': path('oro_inventory_level_update', {'id': entity.id}),
        'aCss': 'no-hash btn',
        'iCss': 'icon-list-alt',
        'label' : 'oro.inventory.widgets.inventory_management'|trans,
        'widget' : {
            'type' : 'dialog',
            'multiple' : false,
            'options' : {
                'dialogOptions' : {
                    'stateEnabled': false,
                    'incrementalPosition': false,
                    'title' : dialogTitle,
                    'allowMaximize': true,
                    'allowMinimize': true,
                    'dblclick': 'maximize',
                    'maximizedHeightDecreaseBy': 'minimize-bar',
                    'width': 800,
                }
            }
        }
    }) }}
{% endif %}
