{% import '@OroUI/macros.html.twig' as UI %}

{% set decrementQuantity = oro_entity_fallback_value(entity, 'decrementQuantity') %}
{% if decrementQuantity is not null %}
    {% set decrementQuantity = (decrementQuantity == true) ? 'true' : 'false' %}
{% endif %}
{% set decrementQuantityValue = decrementQuantity is not null ? 'oro.inventory.decrement_inventory.choice.' ~ decrementQuantity : null %}
{{ UI.renderProperty('oro.inventory.decrement_inventory.label'|trans, decrementQuantityValue|trans) }}
