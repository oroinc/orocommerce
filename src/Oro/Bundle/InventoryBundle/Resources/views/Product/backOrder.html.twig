    {% set backOrder = (backOrder == true) ? 'true' : 'false' %}
{% endif %}
{% set backOrderValue = backOrder is not null ? 'oro.inventory.manage_inventory.choice.' ~ backOrder : null %}
{{ UI.renderProperty('oro.inventory.backorders.label'|trans, backOrderValue|trans) }}
