{% block __oro_product_list_item__product_inventory_status_label_widget %}
    {% import '@OroUI/layouts/renderStatus.html.twig' as renderStatus %}
    {% if product.inventory_status is defined %}
        {{ renderStatus.status({
            label: oro_inventory_availability_label(product)|trans,
            code: oro_inventory_availability_code(product),
            map: {
                'prod_inventory_status.in_stock': 'success',
                'prod_inventory_status.out_of_stock': 'destructive',
                'prod_inventory_status.discontinued': 'destructive',
                'prod_inventory_status.is_low_inventory': 'warning',
                'prod_inventory_status.is_upcoming': 'warning'
            }
        }) }}
    {% endif %}
{% endblock %}
